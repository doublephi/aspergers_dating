					<td><%= image_tag "home.jpg", :alt => "Home" %></td>
					<td width="2" bgcolor="#000000"></td>
					<td><%= image_tag "messages.jpg", :alt => "Messages" %></td>
					<td><%= image_tag "mystuff.jpg", :alt => "My Stuff" %></td>
					<td><%= link_to image_tag("search.jpg", :alt => "Search"), browse_path %></td>
