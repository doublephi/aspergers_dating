					<td width="1"></td>
					<td width="2" bgcolor="#000000"></td>
				</tr>
			</table>
		</td>
	</tr>
	<tr>
		<td height="2" width="100%" bgcolor="#000000"></td>
	</tr>
	<tr>
		<td>
			<table cellpadding="0" cellspacing="0" border="0">
				<tr>
					<td width="2" bgcolor="#000000"></td>
					<td width="146" valign="top">
						<b><u>Online Friends:</u></b><br /><br />
						<b><u>Online Favorites:</u></b>
					</td>
					<td width="2" bgcolor="#000000"></td>
					<td width="996" align="left" valign="top">
						<%= yield %>
					</td>
					<td width="2" bgcolor="#000000"></td>
				</tr>
			</table>
		</td>
	</tr>
	<tr>
		<td height="2" width="100%" bgcolor="#000000"></td>
	</tr>
</table>

